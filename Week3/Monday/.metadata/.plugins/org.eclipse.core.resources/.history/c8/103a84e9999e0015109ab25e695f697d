package exercises;

public class Subtraction<K extends Number, E extends Number> {

	private K num1;
	private E num2;
	
	public Subtraction(){
		setNum1(num1);
		setNum2(num2);
	}

	public K getNum1() {
		return this.num1;
	}

	public void setNum1(K num1) {
		this.num1 = num1;
	}

	public E getNum2() {
		return this.num2;
	}

	public void setNum2(E num2) {
		this.num2 = num2;
	}
	
	public Number subtraction(){
		if(getNum1() instanceof Double || getNum2() instanceof Double){
			return getNum1().doubleValue() - getNum2().doubleValue();
		}else if(getNum1() instanceof Float || getNum2() instanceof Float){
			return getNum1().floatValue() - getNum2().floatValue();
		}else if(getNum1() instanceof Long || getNum2() instanceof Long){
			return getNum1().longValue() - getNum2().longValue();
		}else{
			return getNum1().intValue() - getNum2().intValue();
		}
	}
}
