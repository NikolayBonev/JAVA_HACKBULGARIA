
public class MaxIncreasingConsecutive {
	static int maxIncreasingConsecutive(int[] seq){
		int resultCount = 0;
		int counter = 1;
		
		for(int i = 0 ; i < seq.length -1 ; i++){
			if(seq[i] <= seq[i+1]){
				counter++;
			}else{
				counter = 1;
			}
			
			if(resultCount < counter){
				resultCount = counter;
				
			}
		}
		
		return resultCount;
	}
}
