
public class Task33_100SMS {
	
	static String numbersToMessage(int[] pressedSequence){
		
		StringBuilder message = new StringBuilder();
		boolean capital = false;
		char[] alphabet = {' ',' ', 'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l','m','n','o','p','q','r','s','t','u','v','w','x','y','z'};
		int counter = 0;
		
		for(int i = 0 ; i< pressedSequence.length ; i++){
			
			switch (pressedSequence[i]) {
			case -1:
				break;
			case 0:
				message.append(alphabet[pressedSequence[i]]);
				break;
			case 1:
				capital = true;
				break;
			case 2:
			case 3:
			case 4:
			case 5:
			case 6:
			case 7:
			case 8:
			case 9:
				counter++;
				
				for(int j = i+1; j<pressedSequence.length; j++){
					if(pressedSequence[i] != pressedSequence[j]){
						break;
					}
					
					counter++;
				}
				
				
				counter = 0;
				break;
			default:
				break;
			}
		}
		
		static int hits(int[] pressedSequence){
			return -1;
		}
	}
}
