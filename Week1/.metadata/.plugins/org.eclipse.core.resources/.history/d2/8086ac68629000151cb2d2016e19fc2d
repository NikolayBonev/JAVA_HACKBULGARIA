
public class Task33_100SMS {
	
	static char decodeNumbers(int number, int timesPressed){
		
		String lettersInButton = "";
		
		switch (number) {
		case 2:
			lettersInButton = "abc";
			break;
		case 3:
			lettersInButton = "def";
			break;
		case 4:
			lettersInButton = "ghi";
			break;
		case 5:
			lettersInButton = "jkl";
			break;
		case 6:
			lettersInButton = "mno";
			break;
		case 7:
			lettersInButton = "pqrs";
			break;
		case 8:
			lettersInButton = "tuv";
			break;
		case 9:
			lettersInButton = "wxyz";
			break;
		}
	}
}
