
public class Exercises2 {
	
	int countVowels(String arg){
		
		int counter = 0;
		
		for(int i = 0 ; i < arg.length() ; i++){
			char ch= arg.charAt(i);
			
			switch (ch) {
			case 'a':
			case 'e':
			case 'i':
			case 'o':
			case 'u':
			case 'y':
				counter++;
			}
		}
		
		return counter;
	}
	
	int countConsonants(String arg){
		
		int vowelsCount = countVowels(arg);
		
		StringBuilder text = new StringBuilder();
	}
}
