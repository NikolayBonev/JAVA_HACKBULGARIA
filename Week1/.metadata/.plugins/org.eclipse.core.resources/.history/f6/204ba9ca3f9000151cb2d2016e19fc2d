
public class Exercises {
	
//	Task 6
	static long doubleFac(int n){
		long factorial = 1;
		long p = n;
		
		for(int j = 0; j < 2 ; j++){
			
			factorial = factorial(p);
		}
		
		return factorial;
	}
	
	static  long factorial(long n){
		long factorial = 1;
		
		for(int i = 1 ; i <= n ; i++){
			factorial*= i;
		}
		
		return factorial;
	}
	
//	Task 7
	static long kthFac(int k, int n){
		long factorial = 1;
		long p = n;
		
		for(int j = 0 ; j < k ; j++){
			factorial =1;
			
			p = factorial(p);
		}
		
		return factorial;
	}

//	Task 11
	static long pow(int a, int b){
		long powNum = a;
		
		for(int i = 1 ; i < b ; i++){
			powNum *= a; 
		}
		
		return powNum;
	}	
}